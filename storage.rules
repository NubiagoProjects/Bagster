rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Carrier documents
    match /carrier-docs/{carrierId}/{allPaths=**} {
      allow read: if request.auth != null && 
                    (request.auth.token.role == 'admin' || 
                     request.auth.uid == carrierId);
      allow write: if request.auth != null && request.auth.uid == carrierId;
    }
    
    // Shipment photos
    match /shipment-photos/{shipmentId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                     request.auth.token.role in ['carrier', 'supplier'];
    }
    
    // Business documents
    match /business-docs/{userId}/{allPaths=**} {
      allow read: if request.auth != null && 
                    (request.auth.uid == userId ||
                     request.auth.token.role == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}